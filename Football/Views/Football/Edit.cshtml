@model Football.Models.Footballs.Edit

@{
    ViewBag.Title = "Edit";
}
<div class="container">
    <div class="well">
        <h2>Delete</h2>
        @using (Html.BeginForm("Edit", "Football", FormMethod.Post))
        {
            @Html.EditorForModel();

            <div>
                @Html.LabelFor(m => m.PlayerPosition)
            </div>

            <div>
                @Html.EnumDropDownListFor(m => m.PlayerPosition)
            </div>


            <br />
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "All", "Football", new { @class = "btn btn-default" })
                    <input type="submit" value="Edit" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>

