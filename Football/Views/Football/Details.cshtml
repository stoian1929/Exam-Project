@model Football.Models.Footballs.TacticsDetails

<div class="row mt-60 ">
    <div class="col-md-6 ">
        <img src="@Model.Image" class="img-responsive" />
    </div>

    <div class="col-md-6">
        <h1>Tactic Name:<span style="background-color:green"> @Model.TacticName</span> </h1>
    </div>
    
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="well mt-60">
            <h3>To see more please <span class="btn btn-default btn-lg"><a href="/Account/Login">Log in</a></span></h3>
            
        </div>
    }
@if (User.Identity.IsAuthenticated)
{ 
    <div class="col-md-6">
        <h2>Tactic Formation: @Model.Formation</h2>
        <br />  
        <h3>@Model.Description</h3>
        <br />
        <h3>@Model.PlayerPosition</h3>
    </div>
    <br />
}    
</div>
 
<p class="text-right">
     <span style="color:Highlight">--author</span> 
</p>

<div>
    <footer class="text-center divOutside form-group" style="width: 500px; margin-left: 20px;">
        @if (User.Identity.IsAuthenticated )
        {
            @Html.ActionLink("Edit", "Edit", "Football", new { Model.Id }, new { @class = "btn btn-success btn-sm"  } )        
            @Html.ActionLink("Delete", "Delete", "Football", new { Model.Id }, new { @class = "btn btn-danger btn-sm" })
        }
            @Html.ActionLink("Back", "All", "Football", null, new { @class = "btn btn-default btn-sm" })
    </footer>
</div>
